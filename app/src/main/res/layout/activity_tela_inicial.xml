<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtOla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ola!" />

        <TextView
            android:id="@+id/txtUltimoLancamentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOla"
            android:text="Ultimos Lançamentos" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:layout_below="@+id/txtUltimoLancamentos"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/txtColecao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerView"
            android:text="Minha Coleção" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>